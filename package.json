{
  "name": "wilsonparson.com",
  "version": "1.0.0",
  "description": "My personal website and blog",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all build:css build:html",
    "build:html": "eleventy",
    "build:css": "postcss src/_includes/tailwind.css -o _css-out/styles.css",
    "watch": "npm-run-all --parallel watch:css watch:html",
    "watch:css": "postcss _includes/tailwind.css -o _css-out/styles.css --watch",
    "watch:html": "eleventy --serve",
    "start": "npm run watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wilsonparson/wilsonparson.com.git"
  },
  "author": "Wilson Parson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wilsonparson/wilsonparson.com/issues"
  },
  "homepage": "https://github.com/wilsonparson/wilsonparson.com#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "tailwindcss": "^1.2.0"
  }
}
